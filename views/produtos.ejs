<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Produtos</h1>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th><i class="fa-solid fa-file"></i> Nome:</th>
                            <th><i class="fa-solid fa-info"></i> Categoria:</th>
                            <th><i class="fa-solid fa-dollar-sign"></i> Pre√ßo:</th>
                            <th><i class="fa-solid fa-cubes"></i> Quantidade em Estoque:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(produto => { %>
                        <tr>
                            <td><img src="imgs/box-archive-solid.jpg" width="25px"></td>
                            <td><%= produto.nome %></td>
                            <td><%= produto.categoria %></td>
                            <td><%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                            <td><%= produto.qtdEstoque %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include ('partials/footer.ejs') %>
